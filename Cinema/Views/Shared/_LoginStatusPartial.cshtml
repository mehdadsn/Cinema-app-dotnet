
@if (User.Identity.IsAuthenticated)
{
    <form method="post" asp-controller="Users" asp-action="Logout">
        Welcome @User.Identity.Name
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-controller="Users" asp-action="Login">Login</a>
}
