@model LoginViewModel

<div class="container border" style="padding:20px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="@Model.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="@Model.UserName">
            </div>
            <span class="text-danger" asp-validation-for="@Model.UserName"></span>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="@Model.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="@Model.Password">
            </div>
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>