@model Actor

@{
    ViewData["Title"] = "Edit Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit Actor</h1>
        </p>
        <div class="row ">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-5 text-center">
                        <img id="ProfilePicture" class="border-info rounded-circle" style="max-width:150px;" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProfilePictureUrl" class="form-control-plaintext"></label>
                        <input asp-for="ProfilePictureUrl" class="form-control" />
                        <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-control-plaintext"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Bio" class="form-control-plaintext"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Age" class="form-control-plaintext"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>

        $(document).ready(function(){
            var output = document.getElementById('ProfilePicture');
            output.src = $("#ProfilePictureUrl").val();
        })

        $("#ProfilePictureUrl").on("change", function () {
            var output = document.getElementById('ProfilePicture');
            output.src = $(this).val();
        })
    </script>
}