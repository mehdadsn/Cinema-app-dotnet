@*Define model*@
@model IEnumerable<Cinema>


@*Define ViewData*@
@{
    ViewData["Title"] = "List of Cinemas";
}


@*Write Code*@
<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.LogoUrl)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Name)</th>
                    <th>@Html.DisplayNameFor(Model => Model.About)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Cinema in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@Cinema.LogoUrl" alt="@Cinema.Name" style="max-width: 150px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => Cinema.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => Cinema.About)
                        </td>
                        <td class="align-middle" style="min-width: 300px">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Cinema.Id"><i class="bi bi-pencil-square">Edit</i></a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@Cinema.Id"><i class="bi bi-eye">Details</i></a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@Cinema.Id"><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div style="position: fixed; right:25px; bottom:25px;" class="text-white">
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle">Add New</i></a>
</div>