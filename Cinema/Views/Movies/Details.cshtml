@model Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Movie Details</h1>
        </p>
        <div class="row ">
            <div class="col-md-8 offset-2">
                <div class="mb-5 text-center">
                    <img id="ProfilePicture" class="border-info rounded-circle" style="max-width:150px;" />
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-control-plaintext"></label>
                    <input asp-for="ImageUrl" class="form-control" readonly/>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Title" class="form-control-plaintext"></label>
                    <input asp-for="Title" class="form-control" readonly />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="BreifStory" class="form-control-plaintext"></label>
                    <input asp-for="BreifStory" class="form-control" readonly />
                    <span asp-validation-for="BreifStory" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CinemaStart" class="form-control-plaintext"></label>
                    <input asp-for="CinemaStart" class="form-control" readonly />
                    <span asp-validation-for="CinemaStart" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CinemaEnd" class="form-control-plaintext"></label>
                    <input asp-for="CinemaEnd" class="form-control" readonly />
                    <span asp-validation-for="CinemaEnd" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MovieCategoy" class="form-control-plaintext"></label>
                    <input asp-for="MovieCategoy" class="form-control" readonly />
                    <span asp-validation-for="MovieCategoy" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicture');
            output.src = $("#ImageUrl").val();
        })
    </script>
}