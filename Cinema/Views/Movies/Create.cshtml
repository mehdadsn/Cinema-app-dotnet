@model Movie

@{
    ViewData["Title"] = "Add a new Movie";
    var cinemas = ViewData["Cinemas"] as List<Cinema>; ;
    var actors = ViewData["Actors"] as List<Actor>; ;
    var directors = ViewData["Directors"] as List<Director>; ;

}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a new Movie</h1>
        </p>
        <div class="row ">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-5 text-center">
                        <img id="ProfilePicture" class="border-info rounded-circle" style="max-width:150px;" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-control-plaintext"></label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Title" class="form-control-plaintext"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="BreifStory" class="form-control-plaintext"></label>
                        <input asp-for="BreifStory" class="form-control" />
                        <span asp-validation-for="BreifStory" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-control-plaintext"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CinemaStart" class="form-control-plaintext"></label>
                        <input asp-for="CinemaStart" class="form-control" />
                        <span asp-validation-for="CinemaStart" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CinemaEnd" class="form-control-plaintext"></label>
                        <input asp-for="CinemaEnd" class="form-control" />
                        <span asp-validation-for="CinemaEnd" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MovieCategoy" class="form-control-plaintext"></label>
                        <select class="select" asp-for="MovieCategoy" multiple>
                            <option value="1">Action</option>
                            <option value="2">Comedy</option>
                            <option value="3">Horror</option>
                            <option value="4">Drama</option>
                            <option value="5">Documentry</option>
                            <option value="6">Animation</option>
                        </select>
                        <span asp-validation-for="MovieCategoy" class="text-danger"></span>
                    </div>
                    <select class="form-select mb-3" name="cinemaId">                       
                        @foreach (var cinema in cinemas)
                        {
                            <option value="@cinema.Id">@cinema.Name</option>
                        }
                    </select>

                    <select class="form-select mb-3" name="actorIds" multiple>
                        <option selected>select...</option>
                        @foreach (var actor in actors)
                        {
                            <option value="@actor.Id">@actor.FullName</option>
                        }
                    </select>

                    <select class="form-select mb-3" name="directorId">
                        <option selected>select...</option>
                        @foreach (var director in directors)
                        {
                            <option value="@director.Id">@director.FullName</option>
                        }
                    </select>

                    <div class="mb-3">
                        <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicture');
            output.src = $("#ImageUrl").val();
        })

        $("#ImageUrl").on("change", function () {
            var output = document.getElementById('ProfilePicture');
            output.src = $(this).val();
        })
    </script>
}